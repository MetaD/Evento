<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.summer.evento.EventDetails" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_title"
        android:text="TITLE"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/detail_title"
        android:layout_below="@+id/detail_title"
        android:layout_marginTop="5dp"
        android:text="DATE"
        android:textSize="15sp" />
    
    <TextView
        android:id="@+id/detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/detail_date"
        android:layout_below="@+id/detail_date"
        android:layout_marginTop="5dp"
        android:text="TIME"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/detail_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/detail_time"
        android:layout_below="@+id/detail_time"
        android:layout_marginTop="5dp"
        android:text="LOCATION"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/detail_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/detail_location"
        android:layout_below="@+id/detail_location"
        android:layout_marginTop="20dp"
        android:text="DESCRIPTION"
        android:textSize="15sp" />

    <Button
        android:id="@+id/sync"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        android:text="@string/calendarSyncBtn"
        android:background="#ffcb05"
        android:textSize="15sp" />
    
</RelativeLayout>
